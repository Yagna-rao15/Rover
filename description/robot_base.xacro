<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro"/>

    <!-- COLORS -->
    <material name="white">
        <color rgba="1 1 1 1.0"/>
    </material> 

    <material name="orange">
        <color rgba="1 0.3 .1 1.0"/>
    </material>

    <material name="blue">
        <color rgba=".2 .2 1 1.0"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1.0"/>
    </material>
    
    <material name="blurrywood">
        <color rgba="1 0.4 0.2 1"/>
    </material>

    <!-- Base_Link-->

    <link name="base_link">
    </link>
    
    <!-- BASE FOOTPRINT -->

    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <link name="base_footprint">
    </link>

    <!-- Chassis-->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.0 0.0 0.05"/>
            <geometry>
                <box size="0.4 .3 .1"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.05"/>
            <geometry>
                <box size=".4 .3 .1"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.4" y="0.3" z="0.1">
            <origin xyz="0.0 0.0 0.5"/>
        </xacro:inertial_box>
    </link>
    <gazebo reference="chassis">
        <material>Gazebo/White</material>
    </gazebo>

    <!-- WHEELS -->

    <joint name="front_left_joint" type="continuous" >
        <origin xyz="0.15 .175 0.0" rpy="${-pi/2} 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="left_front_wheel"/>
        <axis xyz="0.0 0.0 1"/>
    </joint>

    <link name="left_front_wheel">
        <visual>
            <geometry>
                <cylinder radius=".05" length=".04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius=".05" length=".04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" radius=".05" length=".04">
            <origin xyz="0.0 0.0 0.5"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="left_front_wheel">
        <material>Gazebo/Blue</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

    <joint name="front_right_joint" type="continuous" >
        <origin xyz="0.15 -.175 0.0" rpy="${pi/2} 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="right_front_wheel"/>
        <axis xyz="0.0 0.0 -1"/>
    </joint>

    <link name="right_front_wheel">
        <visual>
            <geometry>
                <cylinder radius=".05" length=".04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius=".05" length=".04"/>
            </geometry>            
        </collision>
        <xacro:inertial_cylinder mass="0.1" radius=".05" length=".04">
            <origin xyz="0.0 0.0 0.5"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="right_front_wheel">
        <material>Gazebo/Blue</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

    <joint name="back_left_joint" type="continuous" >
        <origin xyz="-0.15 .175 0.0" rpy="${-pi/2} 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="left_back_wheel"/>
        <axis xyz="0.0 0.0 1"/>
    </joint>

    <link name="left_back_wheel">
        <visual>
            <geometry>
                <cylinder radius=".05" length=".04"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius=".05" length=".04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" radius=".05" length=".04">
            <origin xyz="0.0 0.0 0.5"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="left_back_wheel">
        <material>Gazebo/Black</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

    <joint name="back_right_joint" type="continuous" >
        <origin xyz="-0.15 -.175 0.0" rpy="${pi/2} 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="right_back_wheel"/>
        <axis xyz="0.0 0.0 -1"/>
    </joint>

    <link name="right_back_wheel">
        <visual>
            <geometry>
                <cylinder radius=".05" length=".04"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius=".05" length=".04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" radius=".05" length=".04">
            <origin xyz="0.0 0.0 0.5"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="right_back_wheel">
        <material>Gazebo/Black</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

</robot>
